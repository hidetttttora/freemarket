.devise
  = render "devise/shared/header"
  .user__header
    %p.address__input 住所入力
  .user__choisebox
    .address__form 
      = form_for @user, url: signup_index_path, method: :post do |f|
        .nameform
          .name お名前
          .firstname
            = f.text_field :firstname, placeholder: '例）山田'
          .lastname
            = f.text_field :lastname, placeholder: '例）彩'
        .kanaform
          .kana お名前カナ
          .firstname-kana
            = f.text_field :firstname_kana, placeholder: '例）ヤマダ'
          .lastname-kana
            = f.text_field :lastname_kana, placeholder: '例）アヤ'
        .postalcode-form
          .postalcode 郵便番号
          .postalcode-input
            = f.number_field :postalcode, placeholder: '例）123-4567'
        .prefectures-form
          .prefectures 都道府県
          .prefectures__input
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        .city-form
          .city 市区町村
          .city__input
            = f.text_field :city, placeholder: '例）横浜市緑区'
        .adderss-form
          .address 番地
          .address__input
            = f.text_field :address, placeholder: '例）例）青山1-1-1'
        .building-form
          .building 建物
          .building__input
            = f.text_field :building, placeholder: '例）柳ビル103'
        .phonenumber-form
          .phonenumber 電話番号
          .phonenumber__input
            = f.text_field :phonenumber, placeholder: '例）09012345678'
        .profile__submitbtn
          = f.submit "次へ進む", class: "deviseBtn"
  =render "devise/shared/footer"